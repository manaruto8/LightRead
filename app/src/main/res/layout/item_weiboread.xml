<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/tab_bg"
    app:cardPreventCornerOverlap="true"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:padding="10dp">
        <ImageView
            android:background="@drawable/roundcorner_img_back"
            android:id="@+id/weiboImg"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/weiboTitle"
            android:layout_toRightOf="@id/weiboImg"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="top"
            android:textColor="@color/text"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/weiboText"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/weiboImg"
            android:layout_below="@id/weiboTitle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:textColor="@color/dsc"
            android:textSize="12sp"
            android:text="微博热门"/>
        <TextView
            android:id="@+id/weiboTime"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/zhihuTitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="bottom|end"
            android:textColor="@color/dsc"
            android:textSize="12sp"
            android:text="2018-11-23"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
